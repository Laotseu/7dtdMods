<config>

<append xpath="/lootcontainers">	

	<!-- Creaete container size for ridable trucks -->
	<lootcontainer id="901" name="pjtVehicleTruck" count="0" size="12,10" sound_open="UseActions/open_shopping_basket" open_time="0" sound_close="UseActions/close_shopping_basket" loot_quality_template="qualBaseTemplate">
	</lootcontainer>

</append>

<insertAfter  xpath="//lootgroup[@name='4x4Parts']">

	<lootgroup name="pjtTruckParts">
		<item name="pjtVehicleTruckChassis"/>
		<item name="pjtVehicleTruckAccessories"/>
		<item name="vehicleWheels"/>
		<item name="smallEngine"/>
		<item name="carBattery"/>
	</lootgroup>

</insertAfter>

<append xpath="//lootgroup[@name='vehiclePartsTiered']">

	<item group="pjtTruckParts" loot_prob_template="ProbT3"/>

</append>


</config>

