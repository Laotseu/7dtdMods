<configs>
	<append xpath="/items">	
		
		<!-- Vehicles -->
		<item name="pjtTestPlaceable">
			<property name="Extends" value="vehicleMinibikePlaceable"/>
			<property name="Meshfile" value="#@modfolder:Resources/PJTrucks.unity3d?Truck"/>
			<property name="EconomicValue" value="30000"/>
			<property class="Action1">
				<property name="Vehicle" value="pjtTest"/>
				<property name="VehicleSize" value="2.5, 2.2, 6.5"/>
			</property>
			<effect_group name="pjtTestPlaceable" tiered="false">
				<passive_effect name="ModSlots" operation="base_set" value="5"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="300" tags="EconomicValue"/>
				<passive_effect name="DegradationMax" operation="base_set" value="7500"/>
			</effect_group>
		</item>

		<item name="pjtTruckAmbulancePlaceable">
			<property name="Extends" value="vehicleMinibikePlaceable"/>
			<property name="Meshfile" value="#@modfolder:Resources/PJTrucks.unity3d?TruckAmbulance"/>
			<property name="EconomicValue" value="30000"/>
			<property class="Action1">
				<property name="Vehicle" value="pjtTruckAmbulance"/>
				<property name="VehicleSize" value="2.5, 2.2, 6.5"/>
			</property>
			<effect_group name="pjtTruckAmbulancePlaceable" tiered="false">
				<passive_effect name="ModSlots" operation="base_set" value="5"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="300" tags="EconomicValue"/>
				<passive_effect name="DegradationMax" operation="base_set" value="7500"/>
			</effect_group>
		</item>

		<item name="pjtTruckMoPowerPlaceable">
			<property name="Extends" value="vehicleMinibikePlaceable"/>
			<property name="Meshfile" value="#@modfolder:Resources/PJTrucks.unity3d?TruckMoPower"/>
			<property name="EconomicValue" value="30000"/>
			<property class="Action1">
				<property name="Vehicle" value="pjtTruckMoPower"/>
				<property name="VehicleSize" value="2.5, 2.2, 6.5"/>
			</property>
			<effect_group name="pjtTruckMoPowerPlaceable" tiered="false">
				<passive_effect name="ModSlots" operation="base_set" value="5"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="300" tags="EconomicValue"/>
				<passive_effect name="DegradationMax" operation="base_set" value="7500"/>
			</effect_group>
		</item>

		<item name="pjtTruckWorkingStiffPlaceable">
			<property name="Extends" value="vehicleMinibikePlaceable"/>
			<property name="Meshfile" value="#@modfolder:Resources/PJTrucks.unity3d?TruckWorkingStiff"/>
			<property name="EconomicValue" value="30000"/>
			<property class="Action1">
				<property name="Vehicle" value="pjtTruckWorkingStiff"/>
				<property name="VehicleSize" value="2.5, 2.2, 6.5"/>
			</property>
			<effect_group name="pjtTruckWorkingStiffPlaceable" tiered="false">
				<passive_effect name="ModSlots" operation="base_set" value="5"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="300" tags="EconomicValue"/>
				<passive_effect name="DegradationMax" operation="base_set" value="7500"/>
			</effect_group>
		</item>

		<item name="pjtTruckPaintJobPlaceable">
			<property name="Extends" value="vehicleMinibikePlaceable"/>
			<property name="Meshfile" value="#@modfolder:Resources/PJTrucks.unity3d?TruckPaintJob"/>
			<property name="EconomicValue" value="30000"/>
			<property class="Action1">
				<property name="Vehicle" value="pjtTruckPaintJob"/>
				<property name="VehicleSize" value="2.5, 2.2, 6.5"/>
			</property>
			<effect_group name="pjtTruckPaintJobPlaceable" tiered="false">
				<passive_effect name="ModSlots" operation="base_set" value="5"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="300" tags="EconomicValue"/>
				<passive_effect name="DegradationMax" operation="base_set" value="7500"/>
			</effect_group>
		</item>


		<!-- Parts to build the trucks -->
		<item name="pjtVehicleTruckChassis">
			<property name="Extends" value="vehicleWheels"/>
			<property name="EconomicValue" value="9000"/>
			<property name="UnlockedBy" value="perkGreaseMonkey,pjtVehicleTruckChassisSchematic"/>
		</item>

		<item name="pjtVehicleTruckAccessories">
			<property name="Extends" value="vehicleBicycleHandlebars"/>
			<property name="EconomicValue" value="9000"/>
			<property name="UnlockedBy" value="perkGreaseMonkey,pjtVehicleTruckAccessoriesSchematic"/>
		</item>

		<item name="pjtResourceTruckParts">
			<property name="Extends" value="resourceHeadlight"/>
		</item>

		<!-- Schematics -->
		<item name="pjtVehicleTruckChassisSchematic">
			<property name="Extends" value="schematicNoQualityMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="pjtVehicleTruckChassis"/>
			<property name="Unlocks" value="pjtVehicleTruckChassis"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="pjtVehicleTruckChassis" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="vehicleWheels" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
			</effect_group>
		</item>

		<item name="pjtVehicleTruckAccessoriesSchematic">
			<property name="Extends" value="schematicNoQualityMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="pjtVehicleTruckAccessories"/>
			<property name="Unlocks" value="pjtVehicleTruckAccessories"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="pjtVehicleTruckAccessories" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="vehicleWheels" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
			</effect_group>
		</item>

	</append>
</configs>

